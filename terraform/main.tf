# ---------------------------------------------------------------------------------------------------------------------
# Terraform config
# ---------------------------------------------------------------------------------------------------------------------

terraform {
  required_version = ">= 0.12"
}

provider "aws" {
  region                  = "us-west-2"
  profile                 = "sudokrew-dev-playground"
}


# ---------------------------------------------------------------------------------------------------------------------
# Test S3 Bucket
# ---------------------------------------------------------------------------------------------------------------------

resource "aws_s3_bucket" "jenkins-test" {
  bucket = "jenkins-test"
  acl    = "private"

  tags = {
    Project     = "Sudokrew-Internal"
    Environment = "Development"
  }
}